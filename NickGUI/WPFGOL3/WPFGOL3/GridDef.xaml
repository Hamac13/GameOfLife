<Window x:Class="WPFGOL3.GridDef"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFGOL3"
        mc:Ignorable="d" 
        
        Title="GridDef" Height="110.848" Width="267.047"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>

        </Grid.ColumnDefinitions>
        <Button Content="Click to Continue" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="closeWindow" Margin="81,1,-68,-20" Grid.Row="2"/>
        <Slider x:Name="GridSet" IsSnapToTickEnabled="True" TickFrequency="1"  HorizontalAlignment="Left" ValueChanged="GridSlider_ValueChanged" Value="{Binding ElementName=RowsCount , Mode=OneWay , UpdateSourceTrigger=PropertyChanged}" Minimum="10" Maximum="50" VerticalAlignment="Top" Grid.Column="2" Margin="30,0,-118,0" Width="182"/>
        <Label x:Name="RowsCount"  Content="{Binding ElementName=GridSet, Path=Value, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Margin="69,1,0,0" VerticalAlignment="Top" Grid.Column="2" Grid.Row="1"/>


        <Label x:Name="GridSize" Content="Grid Size" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="2" Grid.Row="1"/>

    </Grid>

</Window>