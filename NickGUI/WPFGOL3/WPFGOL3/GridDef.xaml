        <Button x:Name="loadingButton" Grid.Column="0" Grid.Row="5" Click="load" Width="Auto" Height="Auto" BorderBrush="Black" Padding="10" Margin="0,1,10,1">Load</Button>
        <Button x:Name="exitButton" Grid.Column="0" Click="closeWindow" Grid.Row="6" BorderBrush="Black" Padding="10" Width="Auto" Height="Auto" Margin="0,1,10,1">Exit</Button>
        <Label x:Name="Generations" Content="" Grid.Column="0" HorizontalAlignment="Left"  VerticalAlignment="Top" Padding="5" Grid.ColumnSpan="3" Width="Auto"/>
