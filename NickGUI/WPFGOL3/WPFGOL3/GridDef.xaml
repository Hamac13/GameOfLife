        <Label x:Name="Speed"  Content="Speed:" HorizontalAlignment="Left"  VerticalAlignment="Center" Width="Auto" Padding="5" Grid.ColumnSpan="1" Grid.Column="4" Margin="0,0,1,0"/>
        <TextBox x:Name="speedBox" HorizontalAlignment="Left" TextWrapping="Wrap" Text="200"  Padding="5" VerticalAlignment="Center" Grid.Column="5" Grid.ColumnSpan="1" BorderBrush="{x:Null}"/>

